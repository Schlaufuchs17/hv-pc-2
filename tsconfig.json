{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, 
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/client/**/*.ts",
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
