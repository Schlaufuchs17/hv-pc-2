{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "outDir": "./dist",  
    "rootDir": "./src", 
    "strict": true, 
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true, //Previene caidas en las declaraciones
    "esModuleInterop": true //Necesario para que trabajen ES2020 y CommonJS
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
